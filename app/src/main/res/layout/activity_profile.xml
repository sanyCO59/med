<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/tabBot"
        android:layout_width="match_parent"
        android:layout_height="66sp"
        android:layout_gravity="bottom"
        android:background="@drawable/tab_bar"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="22sp"
        android:paddingTop="8sp"
        android:paddingBottom="3sp">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:onClick="analiz"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bot_12" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Анализы"
                android:textColor="#B8C1CC"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:onClick="result"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bot_22" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Результаты"
                android:textColor="#B8C1CC"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:onClick="support"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bot_32" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Поддержка"
                android:textColor="#B8C1CC"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bot_41" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Профиль"
                android:textColor="#1A6FEE"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17sp"
            android:layout_marginBottom="7sp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="Карта пациента"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="7sp"
            android:onClick="photo"
            app:srcCompat="@drawable/tamplate" />


        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="3sp"
            android:fontFamily="@font/lato"
            android:text="@string/t_profile"
            android:textColor="#7E7E9A"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="12sp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:inputType="textPersonName"
            android:padding="14sp"
            android:text="Эдуард"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="12sp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:inputType="textPersonName"
            android:padding="14sp"
            android:text="Олегович"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="12sp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:inputType="textPersonName"
            android:padding="14sp"
            android:text="Тицкий"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="12sp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:inputType="textPersonName"
            android:padding="14sp"
            android:text="28 февраля 1991"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="12sp"
            android:background="@drawable/dropdown"
            android:entries="@array/pol"
            android:fontFamily="@font/lato"
            android:hint="Пол"
            android:paddingHorizontal="14sp"
            android:textColorHint="#939396" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"

            android:background="@drawable/button1"
            android:enabled="false"
            android:fontFamily="@font/lato_bold"

            android:text="Сохранить"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

    </LinearLayout>

</FrameLayout>