<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OformlActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="24sp"
                android:onClick="back"
                app:srcCompat="@drawable/back" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Оформление заказа"
                    android:textColor="#000000"
                    android:textSize="24sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="32sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:fontFamily="@font/lato"
                    android:text="Адрес *"
                    android:textColor="#7E7E9A" />

                <EditText
                    android:id="@+id/edit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Введите ваш адрес"
                    android:inputType="textPersonName"
                    android:padding="14sp"
                    android:textColor="#000000"
                    android:textColorHint="#939396"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="16sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:fontFamily="@font/lato"
                    android:text="Дата и время*"
                    android:textColor="#7E7E9A" />

                <EditText
                    android:id="@+id/edit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Выберите дату и время"
                    android:inputType="textPersonName"
                    android:padding="14sp"
                    android:textColor="#000000"
                    android:textColorHint="#939396"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="32sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:fontFamily="@font/lato"
                    android:text="Кто будет сдавать анализы? *"
                    android:textColor="#7E7E9A" />

                <TextView
                    android:id="@+id/edit3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown"
                    android:drawableLeft="@drawable/em_man"
                    android:drawablePadding="14sp"
                    android:ems="10"
                    android:entries="@array/spin_of"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:padding="14sp"
                    android:text="Тицкий Эдуард"
                    android:textColor="#000000"
                    android:textColorHint="#939396"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/edit_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:background="@drawable/dropdown"
                    android:drawableLeft="@drawable/em_man"
                    android:drawablePadding="14sp"
                    android:ems="10"
                    android:entries="@array/spin_of"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:padding="14sp"
                    android:text="Петров Пётр"
                    android:textColor="#000000"
                    android:textColorHint="#939396"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/edit_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:background="@drawable/dropdown"
                    android:drawableLeft="@drawable/em_woman"
                    android:drawablePadding="14sp"
                    android:ems="10"
                    android:entries="@array/spin_of"
                    android:fontFamily="@font/lato"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:padding="14sp"
                    android:text="Тицкая Елена"
                    android:textColor="#000000"
                    android:textColorHint="#939396"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:background="@drawable/outline_bg"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:onClick="add"
                    android:text="Добавить еще пациента"
                    android:textColor="#1A6FEE"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="32sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:fontFamily="@font/lato"
                    android:text="Телефон *"
                    android:textColor="#7E7E9A" />

                <EditText
                    android:id="@+id/edit4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Введите ваш телефон"
                    android:inputType="textPersonName"
                    android:padding="14sp"
                    android:textColor="#000000"
                    android:textColorHint="#939396"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="16sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:fontFamily="@font/lato"
                    android:text="Комментарий"
                    android:textColor="#7E7E9A" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

                <EditText
                    android:id="@+id/edit5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:gravity="start"
                    android:hint="Можете оставить свои пожелания"
                    android:inputType="textPersonName"
                    android:padding="14sp"
                    android:textColor="#000000"
                    android:textColorHint="#939396"
                    android:textSize="15sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="56sp">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Оплата Apple Pay"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView28"
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/arrow" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="16sp">

                <TextView
                    android:id="@+id/textView461"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Промокод"
                    android:textColor="#939396"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView281"
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/arrow" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="29sp">

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="1 анализ"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/lato_bold"
                    android:text="690 ₽"
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="12sp"
                android:layout_marginBottom="16sp"
                android:background="@drawable/button2"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="Заказать"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="383dp"
            android:layout_gravity="bottom|clip_horizontal"
            android:background="@drawable/modal_bg"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="24sp">

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Выбор пациента"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:onClick="close"
                    app:srcCompat="@drawable/close" />
            </FrameLayout>

            <TextView
                android:id="@+id/person1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="16sp"
                android:background="@drawable/bg2"
                android:drawableLeft="@drawable/em_woman"
                android:drawablePadding="12sp"
                android:fontFamily="@font/lato"
                android:gravity="left|center_vertical"
                android:onClick="res1"
                android:padding="14sp"
                android:text="Тицкая Елена"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/person2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="24sp"
                android:background="@drawable/bg2"
                android:drawableLeft="@drawable/em_man"
                android:drawablePadding="12sp"
                android:fontFamily="@font/lato"
                android:gravity="left|center_vertical"
                android:onClick="res2"
                android:padding="14sp"
                android:text="Петров Пётр"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="24sp"
                android:background="@drawable/outline_bg"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Добавить пациента"
                android:textColor="#1A6FEE"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="24sp"
                android:background="@drawable/button2"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:onClick="addPerson"
                android:text="Добавить пациента"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>