<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context=".LogInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:drawableLeft="@drawable/hello"
            android:drawablePadding="10sp"
            android:fontFamily="@font/lato_bold"
            android:gravity="left|center_vertical"
            android:paddingLeft="10sp"
            android:text="Добро пожаловать!"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="64sp"
            android:fontFamily="@font/lato"
            android:text="Войдите, чтобы пользоваться функциями приложения"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="4sp"
            android:fontFamily="@font/lato"
            android:text="Вход по E-mail"
            android:textColor="#7E7E9A"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:hint="example@mail.ru"
            android:inputType="textEmailAddress"
            android:padding="14sp"
            android:textColorHint="#80000000"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="32sp"
            android:background="@drawable/button2"
            android:clickable="true"
            android:fontFamily="@font/lato_bold"
            android:text="Далее"
            android:onClick="email"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="Или войдите с помощью"
            android:textColor="#7E7E9A"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_with"
            android:fontFamily="@font/lato_bold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>

</FrameLayout>