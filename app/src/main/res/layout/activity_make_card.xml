<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakeCardActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40sp"
            android:fontFamily="@font/lato_bold"
            android:text="Создание карты пациента"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="40sp"
            android:layout_marginRight="20sp"
            android:fontFamily="@font/lato"
            android:gravity="right"
            android:onClick="skip"
            android:text="Пропустить"
            android:textColor="#1A6FEE"
            android:textSize="15sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/lato"
        android:text="Без карты пациента вы не сможете заказать анализы."

        android:textColor="#939396" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/lato"
        android:text="В картах пациентов будут храниться результаты анализов вас и ваших близких."

        android:textColor="#939396" />

    <EditText
        android:id="@+id/text_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="32sp"
        android:fontFamily="@font/lato"
        android:background="@drawable/bg_input"
        android:ems="10"
        android:hint="Имя"
        android:inputType="textPersonName"
        android:paddingHorizontal="14sp"
        android:text=""
        android:textColorHint="#939396" />

    <EditText
        android:id="@+id/text_card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="24sp"
        android:fontFamily="@font/lato"
        android:background="@drawable/bg_input"
        android:ems="10"
        android:hint="Отчество"
        android:inputType="textPersonName"
        android:paddingHorizontal="14sp"
        android:text=""
        android:textColorHint="#939396" />

    <EditText
        android:id="@+id/text_card_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="24sp"
        android:background="@drawable/bg_input"
        android:ems="10"
        android:hint="Фамилия"
        android:inputType="textPersonName"
        android:paddingHorizontal="14sp"
        android:text=""
        android:textColorHint="#939396" />

    <EditText
        android:id="@+id/text_card_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="24sp"
        android:fontFamily="@font/lato"
        android:background="@drawable/bg_input"
        android:ems="10"
        android:hint="Дата рождения"
        android:inputType="date"
        android:paddingHorizontal="14sp"
        android:text=""
        android:textColorHint="#939396" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:fontFamily="@font/lato"
        android:layout_height="54dp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="24sp"
        android:paddingHorizontal="14sp"
        android:hint="Пол"
        android:entries="@array/pol"
        android:textColorHint="#939396"
        android:background="@drawable/dropdown" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="48sp"
        android:background="@drawable/button2"
        android:enabled="false"
        android:fontFamily="@font/lato_bold"
        android:onClick="skip"
        android:text="Создать"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />
</LinearLayout>