<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KorzinaActivity">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="24sp"
        android:onClick="back"
        app:srcCompat="@drawable/back" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Корзина"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:onClick="del"
            app:srcCompat="@drawable/icons_del" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="32sp"
        android:background="@drawable/card_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="16sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView41"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato_bold"
                android:text="Клинический анализ крови с лейкоцитарной формулировкой"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="del"
                app:srcCompat="@drawable/icons" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"

            android:paddingHorizontal="16sp"
            android:paddingBottom="20sp">

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="bottom|left"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:text="690 ₽"
                android:textColor="#000000"
                android:textSize="17sp" />

            <FrameLayout
                android:layout_width="181dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|right">

                <TextView
                    android:id="@+id/pers"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="1 пациент"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/counter">

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:onClick="plus"
                        app:srcCompat="@drawable/char2" />

                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:onClick="minus"
                        app:srcCompat="@drawable/char1" />
                </FrameLayout>
            </FrameLayout>
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="40sp">

        <TextView
            android:id="@+id/count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/lato_bold"
            android:text="690 ₽"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Сумма"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="32sp"
            android:background="@drawable/button1"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="Перейти к оформлению заказа"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

    </FrameLayout>

</LinearLayout>